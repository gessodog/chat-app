<div class="side_bar_top">
  <div class="side_top_name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="side_top_create">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="side_bar_main">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <a href="#"><%= room.name %></a>
      </div>
    </div>
  <% end %>
</div>